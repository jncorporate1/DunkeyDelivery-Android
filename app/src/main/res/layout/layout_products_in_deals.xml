<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
        android:id="@+id/tv_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/app_name"
        android:layout_alignParentLeft="true"
        android:textColor="@color/grey4"
        android:textSize="@dimen/text_size_small"
        app:customFont="arial.ttf" />

        <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
            android:id="@+id/tv_quantity"
            android:layout_width="@dimen/x25dp"
            android:layout_height="@dimen/x25dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="@dimen/x2dp"
            android:singleLine="true"
            android:text="10"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_green_filled"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            app:customFont="arial.ttf" />

</RelativeLayout>