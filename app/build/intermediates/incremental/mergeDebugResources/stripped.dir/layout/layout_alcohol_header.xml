<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grey_lighter2"
    android:paddingTop="@dimen/x12dp"
    android:layout_height="wrap_content">

    <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="111 Lex Wine and Liquor"
        android:drawableRight="@drawable/ic_dropdown"
        android:drawablePadding="@dimen/x8dp"
        android:paddingLeft="@dimen/x10dp"
        android:paddingRight="@dimen/x10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4dp"
        android:paddingLeft="@dimen/x10dp"
        android:paddingRight="@dimen/x10dp"
        android:layout_marginBottom="@dimen/x12dp"
        android:orientation="horizontal">

        <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/tv_delivery_charges"
            android:text="@string/free_delivery"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"/>

        <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
            android:id="@+id/tv_min_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/min_dummy"
            android:textColor="@color/grey4"
            android:textSize="@dimen/text_size_small"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_light"
            android:layout_marginLeft="@dimen/x10dp"
            android:layout_marginRight="@dimen/x10dp"/>

        <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
            android:id="@+id/tv_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="45 to 60 min"
            android:drawablePadding="@dimen/x8dp"
            android:drawableLeft="@drawable/ic_time"
            android:textColor="@color/grey4"
            android:textSize="@dimen/text_size_small"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_lighter"/>

</LinearLayout>