<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x20dp"
        android:layout_marginRight="@dimen/x20dp"
        android:background="@drawable/rect_white"
        android:layout_centerHorizontal="true">

        <RadioGroup
            android:id="@+id/rg_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x4dp"
                android:gravity="left|center"
                android:layoutDirection="rtl"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginTop="@dimen/x12dp"
                android:layout_marginBottom="@dimen/x12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_moderate"
                android:text="@string/male"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_lighter"/>

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x4dp"
                android:gravity="left|center"
                android:layoutDirection="rtl"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginTop="@dimen/x12dp"
                android:layout_marginBottom="@dimen/x12dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_moderate"
                android:text="@string/female"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_lighter"/>





        </RadioGroup>


    </LinearLayout>



</RelativeLayout>