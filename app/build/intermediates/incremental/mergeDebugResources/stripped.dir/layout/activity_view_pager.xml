<?xml version="1.0" encoding="utf-8"?>

                                                        
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/activity_view_pager_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />

        <com.augustopicciani.drawablepageindicator.widget.DrawablePagerIndicator
            android:id="@+id/view_indicator"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:centered="true"
            android:layout_marginBottom="@dimen/x20dp"
            android:layout_gravity="bottom"
            app:drawableSelected="@drawable/welcome_pager_selected"
            app:drawableDefault="@drawable/slider" />
    </FrameLayout>
         