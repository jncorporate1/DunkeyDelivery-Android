<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_continue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x12dp"

                android:paddingRight="@dimen/x12dp">

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/x10dp"
                    android:hint="@string/street"
                    android:inputType="textCapWords"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/et_suit"
                    android:paddingBottom="@dimen/x8dp"
                    android:paddingTop="@dimen/x20dp"
                    android:singleLine="true"
                    android:textColor="@color/grey3"

                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/text_size_moderate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                    android:id="@+id/et_suit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/x10dp"
                    android:hint="@string/suit_address"
                    android:inputType="textCapWords"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/et_city"
                    android:paddingBottom="@dimen/x8dp"
                    android:paddingTop="@dimen/x20dp"
                    android:singleLine="true"
                    android:textColor="@color/grey3"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/text_size_moderate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                            android:id="@+id/et_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/x10dp"
                            android:hint="@string/city"
                            android:inputType="textCapWords"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/et_state_code"
                            android:paddingBottom="@dimen/x8dp"
                            android:paddingTop="@dimen/x20dp"
                            android:singleLine="true"
                            android:textColor="@color/grey3"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/text_size_moderate" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                            android:id="@+id/et_state_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:drawablePadding="@dimen/x10dp"
                            android:hint="@string/state"
                            android:inputType="textCapWords"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:nextFocusDown="@+id/et_zipcode"
                            android:paddingBottom="@dimen/x8dp"
                            android:paddingTop="@dimen/x20dp"
                            android:singleLine="true"
                            android:textColor="@color/grey3"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/text_size_moderate" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey" />

                    </LinearLayout>

                </LinearLayout>

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                    android:id="@+id/et_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/x10dp"
                    android:hint="@string/zip_code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/et_phone"
                    android:paddingBottom="@dimen/x8dp"
                    android:paddingTop="@dimen/x20dp"
                    android:singleLine="true"
                    android:textColor="@color/grey3"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/text_size_moderate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/x10dp"
                    android:hint="@string/phone_number"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/x8dp"
                    android:paddingTop="@dimen/x20dp"
                    android:singleLine="true"
                    android:textColor="@color/grey3"
                    android:textColorHint="@color/grey"
                    android:textSize="@dimen/text_size_moderate" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />


            </LinearLayout>


            <app.com.dunkeydelivery.utils.customviews.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12dp"
                android:layout_marginRight="@dimen/x12dp"
                android:layout_marginTop="@dimen/x25dp"
                android:text="@string/set_frequency"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                app:customFont="Montserrat-Regular_0.otf" />

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10dp"
                android:layout_marginRight="@dimen/x10dp"
                android:layout_marginTop="@dimen/x4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomRadioButton
                    android:id="@+id/rb_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/left_radio_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="Home"
                    android:textColor="@color/tab_text_selector"
                    app:customFont2="Montserrat-Regular_0.otf" />

                <app.com.dunkeydelivery.utils.customviews.widgets.CustomRadioButton
                    android:id="@+id/rb_work"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/middle_radio_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="Work"
                    android:textColor="@color/tab_text_selector"
                    app:customFont2="Montserrat-Regular_0.otf" />


                <app.com.dunkeydelivery.utils.customviews.widgets.CustomRadioButton
                    android:id="@+id/rb_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/right_radio_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x15dp"
                    android:text="Custom"
                    android:textColor="@color/tab_text_selector"
                    app:customFont2="Montserrat-Regular_0.otf" />


            </RadioGroup>


            <Button
                android:id="@+id/btn_add_new_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20dp"
                android:layout_marginLeft="@dimen/x14dp"
                android:layout_marginRight="@dimen/x14dp"
                android:layout_marginTop="@dimen/x20dp"
                android:background="@drawable/green_rounded_btn"
                android:padding="@dimen/x12dp"
                android:text="@string/continue_str"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>